# Application Configuration
APP_NAME="alemedu"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://alemancenter.com
APP_TIMEZONE=UTC
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=alemedu
DB_USERNAME=root
DB_PASSWORD=

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=alemedu_cache_
CACHE_TTL=3600

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_COOKIE=alemedu_session

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_RETRY_AFTER=90

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@alemancenter.com
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=public
FILESYSTEM_DRIVER=local

# Security Configuration
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true

# Compression Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=7
COMPRESSION_THRESHOLD=1024
BROTLI_COMPRESSION_ENABLED=true
BROTLI_COMPRESSION_LEVEL=6

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_MAX_WIDTH=1920
IMAGE_QUALITY=85
IMAGE_CONVERT_TO_WEBP=true
IMAGE_CREATE_RESPONSIVE=true

# API Configuration
API_KEY=
API_TOKEN=

# OneSignal Configuration
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=
ONESIGNAL_USER_AUTH_KEY=

# Monitoring Configuration
MONITORING_ENABLED=true
CACHE_MONITORING_ENABLED=true
PERFORMANCE_TRACKING=true

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null
LOG_SLACK_WEBHOOK_URL=

# Debug Configuration
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Additional Configuration
COMPRESSION_CACHE_MAX_AGE=86400
STATIC_CACHE_MAX_AGE=604800
DYNAMIC_CACHE_MAX_AGE=3600
